<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yoga1290.schoolmate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="yoga1290.schoolmate.MainActivity"
            android:label="@string/app_name" 
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.support.v4.app.FragmentActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="yoga1290.schoolmate.ClassActivity"
            android:label="@string/app_name" 
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="yoga1290.schoolmate.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        
        <activity
            android:name="yoga1290.schoolmate.ProfileActivity"
            android:label="@string/title_activity_profile" 
            android:launchMode="singleTop">
        </activity>
    </application>

</manifest>